{
  "compilerOptions": {
    "outDir": "./dist",

    // Node doesn't support all of es2017, but close enough
    "target": "ES2017",
    // Export Node-style modules since this is running on Node
    "module": "commonjs",
    // We're running on Node, so use this strategy.
    "moduleResolution": "node",

    "strict": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,

    // According to the TS team, this should always be set to true; the default
    // is false for backwards compatibility.
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,

    // Includes the webpack.* files, which are JS rather than TS
    "allowJs": true,
  },
  "include": [
    "./**/*",
    "../config/**/*",
    "../../client/src/rest/**/*",
  ],
}
